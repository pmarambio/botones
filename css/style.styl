*
    margin 0
    padding 0
    box-sizing border-box
body
    width 100%
    height 100%
h1
    text-align center
    margin 5%
    font-family sans-serif
    font-size 2.5rem
h2
    text-align center
    margin 1%
    margin-top 2%
    font-family sans-serif
    font-size 2rem
#section_one
    width 100%
    height 100%
    display flex
    position relative
    flex-wrap wrap
    justify-content center
    .box
        width 200px
        height 35px
        margin 20px
        position relative
        overflow hidden
        border-radius 30px
        transition .5s ease-in-out
        background-color darkred
        &::after
            content ""
            position absolute
            color white
            height 100%
            width 100%
            background-color rgba(0,0,0,1)
            display block
            transition .5s ease-in-out
            border-radius 30px
        a
            width 100%
            height 100%
            display flex
            color white
            font-family sans-serif
            text-align center
            justify-content center
            align-items center
            position absolute
            z-index 99
            
        &:first-child
            position relative
            &::after
                left 0
                top 100% 
            &:hover
                &::after
                    top 0
        &:nth-child(2)
            &::after
                left 100%
                top -100%
            &:hover
                &::after
                    left 0
                    top 0 
        &:nth-child(3)
            &::after
                left -100%
                top 100%
            &:hover
                &::after
                    left 0
                    top 0     
        &:nth-child(4)
            position relative
            &::after
                left -100%
                top 0
            &:hover
                &::after
                    left 0
        &:nth-child(5)
            text-align center
            position relative
            display flex
            align-items center
            justify-content center
            font-family sans-serif
            transition .5s ease-in-out
            &::after
                content ""
                position absolute
                width 100%
                height 100%
                left 0
                top 0
                transform scaleX(0)
                transition .5s ease-in-out
                background-color black
            &:hover
                transition .5s ease-in-out
                &::after
                    transition .5s ease-in-out
                    transform scaleX(1)   
                a
                    &::after
                        transition .5s ease-in-out
                        transform scaleX(1)
            a
                color white
                letter-spacing 3px
                transition .5s ease-in-out
                text-decoration none
                position relative
                display flex
                justify-content center
                z-index 999
                height max-content
                width max-content
                &::after
                    content ""
                    position absolute
                    height 100%
                    width 100%
                    border-bottom 1px solid white
                    border-radius 0
                    background-color transparent
                    transform: scaleX(0)
                    transition .5s ease-in-out
     

#section_two
