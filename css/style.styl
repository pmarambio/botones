rojo = #c94a36
amarillo = #ebbd26
verde = #78bd40
azul = #1b36bf

*
    margin 0
    padding 0
    box-sizing border-box
body
    width 100%
    height 100%

.container
    width 100%
    height 100%
    display flex
    &:first-child
       .box
            position relative
            &::after
                left 0
                top 100% 
            &:hover
                &::after
                    top 0
    &:nth-child(2)
       .box
            position relative
            &::after
                left -100%
                top 100%
            &:hover
                &::after
                    left 0
                    top 0
        .box1
            border-radius 0
            background-color white
            &::before
                content "Front"
                position absolute
                height 100%
                width 100%
                background-color black
                color white
                display block
                transition .5s ease-in-out
                top 0
                left 0
                display flex
                justify-content center
                align-items center
                transform scaleY(1)
                border-radius 30px
            &::after
                content "Back"
                left 0
                top 100%
                border-top 1px solid white
                display flex
                justify-content center
                align-items center
                background-color grey
                color white
                z-index 1
                transform scaleY(0)
                border-radius 30px
            &:hover
                &::after
                    left 0
                    top 0
                    transition .5s ease-in-out
                    transform scaleY(1)
                &::before   
                    left 0
                    top -100% 
                    transition .5s ease-in-out
                    transform scaleY(0)
            

    &:nth-child(3)
       .box
            position relative
            &::after
                left -100%
                top 0
            &:hover
                &::after
                    left 0
    &:nth-child(4)
       .box
            text-align center
            position relative
            display flex
            align-items center
            justify-content center
            font-family sans-serif
            transition .5s ease-in-out
            a
                color white
                letter-spacing 3px
                transition .5s ease-in-out
                text-decoration none
                position relative
                display flex
                justify-content center
                z-index 999
                &::after
                    content ""
                    position absolute
                    width 100%
                    height 100%
                    border-bottom 1px solid white
                    transform: scaleX(0)
                    transition .5s ease-in-out
            &::after
                left 0
                top 0
                transform: scaleX(0)
                transition .5s ease-in-out
            &:hover
                transition .5s ease-in-out
                a
                    &::after
                        transition .5s ease-in-out
                        transform scaleX(1)
                &::after
                    transition .5s ease-in-out
                    transform scaleX(1)            
    .box
        width 20%
        height 5vh
        margin  2.5%
        position relative
        overflow hidden
        border-radius 30px
        transition .5s ease-in-out
        &::after
            content ""
            position absolute
            color white
            height 100%
            width 100%
            background-color rgba(0,0,0,1)
            display block
            transition .5s ease-in-out
            border-radius 30px
    .box1
        background-color rojo
    .box2
        background-color amarillo
    .box3
        background-color verde
    .box4
        background-color azul

