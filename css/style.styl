    display flex
    flex-wrap wrap
    justify-content center
    a
        display inline-block
        position relative
        background none
        border none
        color #fff
        font-size 18px
        cursor pointer
        margin 15px 20px
        background rgba(0,0,0,0.09)
        background #0000000
        font-family sans-serif
        text-decoration none
        span
            display block
            padding 15px 40px
            &::before, &::after
                content ""
                width 5px
                height 0
                position  absolute
                transition  all 0.2s linear
            &::before
                background-color #750979
            &::after
                background-color #ff9700     
        &::before, &::after
            content ""
            width 0
            height 5px
            position absolute
            transition all 0.2s linear
